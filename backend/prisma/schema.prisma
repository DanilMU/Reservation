generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model Event {
  id          Int      @id @default(autoincrement())
  name        String
  total_seats Int
  bookings    Booking[]
}

model Booking {
  id         Int      @id @default(autoincrement())
  event_id   Int
  user_id    String
  created_at DateTime @default(now())

  event Event @relation(fields: [event_id], references: [id])

  @@unique([event_id, user_id]) // Ограничение: один пользователь не может дважды забронировать одно событие
}